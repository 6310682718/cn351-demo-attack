<html>
  <body>
    <% include('header.ejs') %>
    <div class="container mt-5">
      <h1 class="mt-5 text-center">All Posts</h1>
      <% if (posts.length === 0) { %>
        <p>No posts available.</p>
      <% } else { %>
        <% for (let i = 0; i < posts.length; i++) { %>
          <div class="card mt-5">
            <h5 class="card-header"><%= posts[i].title %></h5>
            <div class="card-body">
              <%= posts[i].description %>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </body>
</html>
